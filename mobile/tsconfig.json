{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "../shared/**/*.ts",
    "nativewind-env.d.ts",
    "App.tsx"
  ],
  "exclude": [
    "node_modules",
    "backend/node_modules",
    "backend/generated",
    ".expo"
  ]
}
